<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/authorLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >

            <ImageView
                android:id="@+id/reachability"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="5dip"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <tta.astrologerapp.talktoastro.chat.views.MessageTextView
            android:id="@+id/body"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="5"
            android:maxWidth="250dip"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:gravity="left"
            android:text="some body text"
            android:textColor="@android:color/primary_text_light"
            android:background="@drawable/bg_speech_bubble_incoming" />

        <tta.astrologerapp.talktoastro.chat.views.MessageTextView
            android:id="@+id/date"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:paddingStart="10dip"
            android:paddingEnd="10dip"
            android:text="Thursday, 30 June 2016 - 17:39"
            android:textColor="@android:color/white"
            android:layout_below="@+id/body" />

        <tta.astrologerapp.talktoastro.chat.views.MessageTextView
            android:id="@+id/bodyRight"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="5"
            android:maxWidth="250dip"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:gravity="right"
            android:text="some body text"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/primary_text_light"
            android:background="@drawable/bg_speech_bubble_outgoing"
            />

        <tta.astrologerapp.talktoastro.chat.views.MessageTextView
            android:id="@+id/dateRight"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:paddingStart="10dip"
            android:paddingEnd="10dip"
            android:layout_alignParentRight="true"
            android:text="Thursday, 30 June 2016 - 17:39"
            android:textColor="@android:color/white"
            android:layout_below="@+id/bodyRight" />

    </RelativeLayout>

</LinearLayout>

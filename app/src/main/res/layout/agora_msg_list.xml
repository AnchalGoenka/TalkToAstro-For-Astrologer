<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/rl_astro"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/astro_chat_bubble">
         <TextView
             android:id="@+id/tv_astro_name"
                 android:layout_width="@dimen/_40sdp"
                 android:layout_height="@dimen/_40sdp"
             android:visibility="gone"
                 android:background="@drawable/shape_circle_red"
                 android:ellipsize="end"
             android:gravity="center"
             android:lines="1"
             android:textSize="@dimen/_10sdp"
             android:textColor="@color/white"/>
        <TextView
                android:id="@+id/tv_astro_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_astro_name"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="hi"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_1sdp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_astro_TimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 pm"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textSize="@dimen/_8sdp"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_below="@+id/tv_astro_msg"
            />
        <ImageView
                android:id="@+id/iv_img_astro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_astro_name"
            android:background="@drawable/icon_msg_l"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_alignParentEnd="true">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_alignParentEnd="true"
           android:layout_marginBottom="@dimen/_2sdp"
           android:background="@drawable/user_chat_bubble">
        <TextView
            android:visibility="gone"
                android:id="@+id/tv_user_name"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
               android:background="@drawable/shape_circle_green"
                android:ellipsize="marquee"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:singleLine="true" />

        <TextView
                android:id="@+id/tv_user_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv_user_name"
                android:text="hi"
                android:layout_gravity="start"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                 android:paddingTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:visibility="gone" />
        <TextView
            android:id="@+id/tv_userTimeStamp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 pm"
            android:textSize="@dimen/_8sdp"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="end"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_below="@+id/tv_user_msg"/>

        <ImageView
                android:id="@+id/iv_img_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_user_name"
                android:background="@drawable/icon_msg_r"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:visibility="gone" />
       </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
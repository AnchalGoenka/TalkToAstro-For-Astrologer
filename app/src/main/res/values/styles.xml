<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_button_green</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_body_title_h1_regular_small" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/offBlack</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="style_body_title_h1_regular_small_italic" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/offBlack</item>
        <item name="android:fontFamily">@string/font_family_regular_italic</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="style_body_title_h1_regular" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/offBlack</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="style_body_title_h1_regular_grey" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="style_body_title_h1_regular_medium" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_body_title_h1_regular_large" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_body_title_h1_regular_header" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_body_title_h1_regular_header_black" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="style_body_title_h1_regular_grey_small" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>
